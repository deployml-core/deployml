FROM python:3.10-slim

WORKDIR /app

RUN pip install --no-cache-dir mlflow==2.9.2 psycopg2-binary==2.9.9

EXPOSE 5000

CMD mlflow server \
    --host 0.0.0.0 \
    --port 5000 \
    --backend-store-uri ${MLFLOW_BACKEND_STORE_URI:-sqlite:///mlflow.db} \
    --default-artifact-root ${MLFLOW_ARTIFACT_ROOT:-./mlruns}

